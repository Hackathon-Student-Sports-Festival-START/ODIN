@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>СТАРТ x МГИМО</title>
    <link href="https://fonts.googleapis.com/css2?family=Mazzard+H:wght@400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
    font-family: 'Mazzard H', sans-serif;
    margin: 0;
    padding: 0;
}

@font-face {
    font-family: 'Druk Wide Cyrillic';
    src: url('drukwidecyr-bold.woff2') format('woff2'); /* Путь к файлу шрифта */
    font-weight: bold; /* Укажите нужный вес */
}

header {
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #FF0000;
    color: white;
    padding: 10px 20px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    font-family: 'Druk Wide Cyrillic';
    max-width: 100%;
}

.menu-icon {
    display: none;
    font-size: 30px;
    cursor: pointer;
}

.logo-img {
    height: 2vw;
}

nav {
    display: flex;
    align-items: center;
}

nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-right: 1vw;
    display: flex;
}

nav ul li {
    margin: 0 15px;
}

nav a {
    color: white;
    text-decoration: none;
}

nav a:hover {
    text-decoration: underline;
    
}

.account-icon img {
    height: 24px;
    width: 24px;
}

.news-feed {
    padding: 1vw 4vw;
    padding-top: 7vw;
}

.news-item {
    margin-bottom: 20px;
    display: flex;
    justify-content: start;
    gap: 3vw;
}

.news-item img {
    max-width: 100%;
}
.banner {
    background-color: red; 
    height: 100vh; 
    display: flex; 
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
}

.banner-image {
    margin-top: 5vw;
    max-width: 100%;
    height: auto;
}

.news-img {
    width: 20%;
    height: 20%;
}

.banner-text {
    font-family: 'Druk Wide Cyrillic';
    color: white;
    text-align: center;
}

@media (max-width: 768px) {
    .news-img {
        width: 50%;
        height: 50%;
    }
    .banner-image {
        max-width: 80%;
    }
    .menu-icon {
        display: block;
    }

    header{
        width: 93%;
    }

    nav {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 60px;
        left: 0;
        width: 100%;
        background-color: #c50000;
    }

    nav.active {
        display: flex;
    }

    nav ul {
        flex-direction: column;
    }

    nav ul li {
        margin: 10px 0;
    }

    .logo-img {
        height: 5vw;
    }
}
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <img class="logo-img" src="/main-logo.png" alt="">              
